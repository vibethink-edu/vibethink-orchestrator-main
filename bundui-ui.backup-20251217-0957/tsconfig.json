{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "./dist",
        "strict": false,
        "noEmitOnError": false,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}