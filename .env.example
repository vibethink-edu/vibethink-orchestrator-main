# Gemini Configuration for AI Pair Orchestrator Pro
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_BASE_URL=https://generativelanguage.googleapis.com

# --- VibeThink DNA (Injected) ---
STACK_TYPE=next-ai-orchestrator
STACK_ORCHESTRATION_MODE=integrated
STACK_DOCS_METHODOLOGY=vibethink-golden-v3
STACK_ARCHITECTURE=monorepo

# --- Product Branding (Configurable) ---
# Development name: "Pana" | Production name: TBD
NEXT_PUBLIC_PRODUCT_NAME=Pana
NEXT_PUBLIC_PRODUCT_TAGLINE=El amigo que orquesta tu empresa
NEXT_PUBLIC_PRODUCT_DESCRIPTION=AI-powered business orchestration platform
NEXT_PUBLIC_COMPANY_NAME=VibeThink

# Logo/Branding (optional - defaults to gradient if not set)
# NEXT_PUBLIC_LOGO_URL=/logo.png
# NEXT_PUBLIC_FAVICON_URL=/favicon.ico

# --- UI Stack (Shadcn + Radix UI) ---
UI_LIBRARY=shadcn
UI_LIBRARY_VERSION=latest
UI_COMPONENTS_LOCATION=packages/ui
UI_COMPONENTS_INSTALLED=avatar,badge,button,card,progress,tabs

# Radix UI Versions (Latest Stable)
RADIX_AVATAR_VERSION=^1.1.2
RADIX_DIALOG_VERSION=^1.1.4
RADIX_LABEL_VERSION=^2.1.1
RADIX_PROGRESS_VERSION=^1.1.1
RADIX_SEPARATOR_VERSION=^1.1.1
RADIX_SLOT_VERSION=^1.1.1
RADIX_TABS_VERSION=^1.1.2

# UI Utilities
CLASS_VARIANCE_AUTHORITY_VERSION=^0.7.1
CLSX_VERSION=^2.1.1
TAILWIND_MERGE_VERSION=^2.6.0
TAILWIND_ANIMATE_VERSION=^1.0.7
LUCIDE_REACT_VERSION=^0.468.0

# Dónde vive este proyecto en Producción
DEPLOY_PLATFORM_WEB=vercel          # opciones: vercel, digitalocean, coolify, dokploy, s3
DEPLOY_PLATFORM_API=none            # options: (same), none
DEPLOY_PROD_URL=https://orchestrator.vibethink.dev
GITHUB_REPO_URL=https://github.com/vibethink-edu/vibethink-orchestrator-main

# Existing AI Providers
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key
KNOTIE_API_KEY=your_knotie_key

# Gemini Specific Settings
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=4096
GEMINI_ENABLE_MULTIMODAL=true
GEMINI_ENABLE_LONG_CONTEXT=true
