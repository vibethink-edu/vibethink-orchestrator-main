# VibeThink Website Environment Variables
# Copy this file to .env.local and fill with your actual values

# App Configuration
NEXT_PUBLIC_APP_NAME="VibeThink Website"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Website Configuration
NEXT_PUBLIC_SITE_URL=https://vibethink.com
NEXT_PUBLIC_COMPANY_NAME="VibeThink"

# Development Configuration
NODE_ENV=development

# Contact Form
NEXT_PUBLIC_CONTACT_EMAIL=contact@vibethink.com

# Marketing Tools
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id_here

# CMS/Content (if needed)
CONTENTFUL_SPACE_ID=your_contentful_space_id_here
CONTENTFUL_ACCESS_TOKEN=your_contentful_access_token_here

# Email Service (for contact forms)
SMTP_HOST=your_smtp_host_here
SMTP_PORT=587
SMTP_USER=your_smtp_user_here
SMTP_PASS=your_smtp_password_here