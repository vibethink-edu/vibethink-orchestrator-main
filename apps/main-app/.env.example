# VibeThink Main App Environment Variables
# Copy this file to .env.local and fill with your actual values

# App Configuration
NEXT_PUBLIC_APP_NAME="VibeThink"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Database Configuration (Supabase)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_PORT=3000

# App URLs (for navigation)
NEXT_PUBLIC_DASHBOARD_URL=http://localhost:3001
NEXT_PUBLIC_ADMIN_URL=http://localhost:3002
NEXT_PUBLIC_LOGIN_URL=http://localhost:3003
NEXT_PUBLIC_HELPDESK_URL=http://localhost:3004

# Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Optional: Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id_here