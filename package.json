{
  "name": "vibethink-orchestrator",
  "version": "1.0.0",
  "description": "VThink 1.0 Enterprise SaaS Platform with AI Integration",
  "private": true,
  "scripts": {
    "dev": "cd apps/dashboard && npm run dev",
    "build": "cd apps/dashboard && npm run build",
    "start": "cd apps/dashboard && npm run start",
    "lint": "cd apps/dashboard && npm run lint",
    "test": "cd apps/dashboard && npm run test",
    "validate:ecosystem": "node dev-tools/validation/cross-app-validator.cjs",
    "validate:cross-app-compatibility": "node dev-tools/validation/cross-app-validator.cjs",
    "validate:shared-component-impact": "node dev-tools/validation/shared-component-validator.cjs",
    "validate:external-update": "node dev-tools/validation/dependency-validator.cjs",
    "validate:security": "node dev-tools/validation/security-validator.cjs",
    "validate:performance": "node dev-tools/validation/performance-validator.cjs",
    "validate:duplication": "node dev-tools/validation/duplication-checker.cjs",
    "validate:integration": "node dev-tools/validation/integration-validator.cjs",
    "validate:universal": "npm run validate:ecosystem && npm run validate:duplication && npm run validate:integration",
    "pre-commit": "npm run validate:universal",
    "ai:before-changes": "npm run validate:universal",
    "ai:after-changes": "npm run validate:universal && npm run dev",
    "ai:safe-commit": "npm run validate:universal && git add . && git commit -m",
    "ai:recovery": "git stash && npm run validate:universal && git stash pop"
  },
  "keywords": [
    "vibethink",
    "orchestrator",
    "ai",
    "saas",
    "enterprise",
    "dashboard",
    "theme-customizer"
  ],
  "author": "VibeThink Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "apps/*",
    "src/*"
  ],
  "devDependencies": {
    "@types/node": "20.0.0",
    "typescript": "5.0.0"
  },
  "ai-stability-rules": {
    "mandatory": true,
    "validation-required": true,
    "pre-commit-hook": true,
    "recovery-procedure": true
  }
}
