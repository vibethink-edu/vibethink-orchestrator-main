# NPM Configuration for VibeThink Orchestrator
# Enforce NPM usage only (no Yarn/PNPM)

# Security settings
audit-level=moderate
fund=false

# Performance settings
prefer-offline=false
prefer-online=true

# Registry settings
registry=https://registry.npmjs.org/

# Workspace configuration
workspaces-update=true
install-links=true

# Prevent mixed package managers
engine-strict=true